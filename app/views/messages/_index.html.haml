.notice グループが作成されました
.contents
  .sidebar
    .sidebar__top
      %h1.sidebar__top__name
        = current_user.name
      %ul.lists
        %li.list
          =link_to new_group_path do
            %i.fa.fa-pencil-square-o
        %li.list
          =link_to edit_user_path(current_user) do
            %i.fa.fa-cog
    .sidebar__bottom
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          %ul.sidebar__bottom__groups__name
            = group.name
          %li.sidebar__bottom__groups__text
            こんにちは
  .chatbar
    .chatbar__top
      .chatbar__top__left
        .chatbar__top__left__name
          test
        .chatbar__top__left__member
          Member : 若林真也
      .chatbar__top__right
        %button
          Edit
    .chatbar__main
      %ul.chatbar__main__messages
        %li.chatbar__main__message
          %p.chatbar__main__message__name
            若林真也
          %p.chatbar__main__message__datetime
            2019/04/28 10:51:44
          %p.chatbar__main__message__text
            こんにちは
    .form
      %form.new-message
        .input-box
          %input.input-box__text{placeholder: "type a message"}
          %label.input-box__image{for: "upload-icon"}
            %icon.fa.fa-picture-o
            %input{type: "file", id: "upload-icon"}
            .input-box__image__file
          %input.submit-btn{:type => "submit", :value => "Send"}
